<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/btn_back"
                    android:layout_margin="20dp"
                    android:padding="10dp"
                    android:src="@drawable/ic_arrow_back"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            <android.support.v4.widget.CircleImageView
                android:id="@+id/civ_crianca"
                android:layout_margin="5dp"
                android:elevation="8dp"
                android:layout_width="match_parent"
                android:layout_height="240dp"
                android:src="@drawable/ic_account_box_black_24dp"
                android:alpha="0.1"/>

            </RelativeLayout>

            <EditText
                android:id="@+id/edt_nome_crianca"
                android:imeOptions="actionNext"
                android:digits="ABCDEFGHIJKLMNOPQRSTUVXZWYabcdefghijklmnopqrstuvxzwy "
                android:gravity="center"
                android:maxLines="1"
                android:inputType="text"
                android:singleLine="true"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="20dp"
                android:hint="Nome da crianca"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <EditText
                android:id="@+id/edt_idade_crianca"
                android:imeOptions="actionNext"
                android:digits="ABCDEFGHIJKLMNOPQRSTUVXZWYabcdefghijklmnopqrstuvxzwy "
                android:gravity="center"
                android:maxLines="1"
                android:inputType="text"
                android:singleLine="true"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="20dp"
                android:hint="Idade da crianca"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <EditText
                android:id="@+id/edt_identidade_crianca"
                android:imeOptions="actionNext"
                android:digits="ABCDEFGHIJKLMNOPQRSTUVXZWYabcdefghijklmnopqrstuvxzwy "
                android:gravity="center"
                android:maxLines="1"
                android:inputType="text"
                android:singleLine="true"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="20dp"
                android:hint="Identidade da crianca"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <EditText
                android:id="@+id/edt_nome_responsavel_crianca"
                android:imeOptions="actionNext"
                android:digits="ABCDEFGHIJKLMNOPQRSTUVXZWYabcdefghijklmnopqrstuvxzwy "
                android:gravity="center"
                android:maxLines="1"
                android:inputType="text"
                android:singleLine="true"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="20dp"
                android:hint="Nome do responsavel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />




        </LinearLayout>

    </ScrollView>

    <Button
        android:id="@+id/btn_add_crianca"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/primary_dark"
        android:text="CADASTRAR"
        android:textColor="#ffffff"
        android:layout_alignParentBottom="true"
        />

</RelativeLayout>